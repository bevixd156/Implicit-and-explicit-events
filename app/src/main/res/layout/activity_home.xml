<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main1"
    tools:context=".HomeActivity">

    <!-- Barra superior con soporte para menú -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/brand_primary"
            android:title="Menú Principal"
            android:titleTextColor="@android:color/white"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido desplazable, con padding propio -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <!-- Columna simple, centrada y con ancho máximo para que no se estire en tablets -->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Contenedor para limitar el ancho en pantallas grandes -->
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:maxWidth="500dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvBienvenida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido:"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main1" />

                <!-- Botones -->
                <Button
                    android:id="@+id/btnIrPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ir a Perfil (resultado)"/>

                <Button
                    android:id="@+id/btnAbrirWeb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Abrir sitio web Santo Tomas"/>

                <Button
                    android:id="@+id/btnAbrirGitHub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Abrir sitio web Git Hub"/>

                <Button
                    android:id="@+id/btnEnviarCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Enviar correo"/>

                <Button
                    android:id="@+id/btnCompartir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Compartir texto"/>

                <Button
                    android:id="@+id/btnLinterna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Linterna ON/OFF" />

                <Button
                    android:id="@+id/btnCamara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abrir Cámara"
                    android:layout_marginTop="12dp"/>

                <Button
                    android:id="@+id/btnConfigWifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abrir Ajustes Wi-Fi"
                    android:layout_marginTop="12dp"/>

                <Button
                    android:id="@+id/btnIrMaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresar Datos Google Maps"
                    android:layout_marginTop="12dp"/>

                <Button
                    android:id="@+id/btnMarcadorTelefonico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abrir Marcador telefonico"
                    android:layout_marginTop="12dp"/>

                <Button
                    android:id="@+id/btnEventoCalendario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar evento a calendario"
                    android:layout_marginTop="12dp"/>

                <Button
                    android:id="@+id/btnimagenGaleria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abrir imagen de la Galería"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
